<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/favourites"
        android:name="com.example.restaurantapp.Favourites"
        android:label="Favourites"
        tools:layout="@layout/fragment_favourites" />
    <fragment
        android:id="@+id/profile"
        android:name="com.example.restaurantapp.fragments.Profile"
        android:label="Login"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profile_to_registerFragment2"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_profile_to_loggedProfileFragment"
            app:destination="@id/loggedProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.restaurantapp.fragments.ListFragment"
        android:label="Restaurants"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.restaurantapp.fragments.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment2_to_profile"
            app:destination="@id/profile" />
    </fragment>
    <fragment
        android:id="@+id/loggedProfileFragment"
        android:name="com.example.restaurantapp.fragments.LoggedProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_logged_profile" >
        <action
            android:id="@+id/action_loggedProfileFragment_to_profile"
            app:destination="@id/profile" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.restaurantapp.fragments.DetailFragment"
        android:label="Details"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="currentRestaurant"
            app:argType="com.example.restaurantapp.model.Restaurant" />
    </fragment>
</navigation>